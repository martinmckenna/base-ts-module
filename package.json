{
  "name": "my-package",
  "version": "0.0.1",
  "homepage": "",
  "repository": {
    "type": "git",
    "directory": ""
  },
  "engines": {
    "node": ">= 10.16.0"
  },
  "description": "",
  "author": "",
  "license": "MIT",
  "private": false,
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "unpkg": "./index.js",
  "dependencies": {
    "handlebars": "^4.4.3"
  },
  "scripts": {
    "start": "concurrently \"tsc -w\" \"babel src --watch --out-dir lib --extensions '.ts,.tsx'\" \"webpack --watch --config webpack.dev.config.js\" -n 'tsc,babel,webpack' -k",
    "build": "tsc && babel src --out-dir lib --extensions '.ts,.tsx' && webpack",
    "test": "jest --config jest.config.js",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"src/**/*.js\"",
    "lint": "eslint . --ext '.ts,.tsx'",
    "typecheck": "tsc --noEmit true --emitDeclarationOnly false",
    "prepublishOnly": "yarn lint && yarn typecheck && yarn format && yarn build"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "lib/*",
    "package.json",
    "README.md"
  ],
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-modules-commonjs": "^7.5.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.6.0",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.7.1",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "concurrently": "^4.1.1",
    "eslint": "^6.8.0",
    "husky": "^3.1.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.4.2",
    "npm-dts-webpack-plugin": "^1.1.10",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.4",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.8.0"
  },
  "resolutions": {
    "handlebars": "^4.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn typecheck"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint",
      "prettier --write",
      "git add"
    ]
  }
}
